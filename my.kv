#:import Factory kivy.factory.Factory
#:import Image kivy.uix.image
#:import Image kivy.core.image
#:import Video kivy.uix.video
#:import Video kivy.core.video

WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:
    FifthWindow:




<MainWindow>:
    name: "main"
    id: main

    GridLayout:
        cols:1
        size: root.width, root.height
        size_hint: (0.5, 1)
        pos_hint: {'center_x': 0.5}
        padding: 50
        spacing: 20

        Label:
            text: "Randercise!"
            font_size: 100
            color: (2/255,11/255,69/255, 0.95)

        Image:
            source: 'Images/dumbbell.jfif'


        EasyButton:
            id: EasyButton
            text: "Easy"
            variable: 5
            font_size: 50
            on_release:
                app.root.current = "descriptions"
                root.manager.transition.direction = "right"
                root.level(self.text, self.variable)

        MediumButton:
            id: MediumButton
            text: "Medium"
            variable: 7
            font_size: 50
            on_release:
                app.root.current = "descriptions"
                root.manager.transition.direction = "right"
                root.level(self.text, self.variable)

        HardButton:
            id: HardButton
            text: "Hard"
            variable: 9
            font_size: 50
            font_name: 'Arial'
            on_release:
                app.root.current = "descriptions"
                root.manager.transition.direction = "right"
                root.level(self.text, self.variable)

<EasyButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (131/255, 191/255, 250/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]

<MediumButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (8/255, 68/255, 221/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]

<HardButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (4/255, 20/255, 123/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]

<SecondWindow>:
    name: "descriptions"

    GridLayout:
        id: grid
        cols:1

        Button:
            id: Start
            size_hint: 0.3,0.3
            text: "Start"
            font_size: 50
            background_color: (18/255,143/255,9/255,0.95)
            background_normal: ''
            on_release:
                app.root.current = "timer"
                root.manager.transition.direction = "right"



<ThirdWindow>:
    name: "timer"

    GridLayout:

        cols:1

        GridLayout:

            cols:2

            GridLayout:
                cols:2

                Label:

                    text: "Set Number:"
                    font_size: 25

                Label:
                    id: set
                    text: "1"
                    font_size: 50



            Label:
                text: ""
                id: exercise
        GridLayout:
            cols: 2
            Label:
                id: timer
                font_size: 150
            Label:
                text: "Tips/Advice"
        GridLayout:
            cols: 2

            Button:
                id: pause
                text: "Pause ||"
                on_release: root.pause_play()



            GridLayout:
                cols:2

                Label:
                    text: "Up Next: "

                Label:
                    text: ""
                    id: next




<FourthWindow>:
    name: "gif"

    GridLayout:
        id: GIF
        cols: 1

   




<FifthWindow>:
    name: "cooldown"

    GridLayout:

        cols: 1

        Label:
            text: "Cooooooldown"




#:import Factory kivy.factory.Factory
WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:
    FifthWindow:

<Play@Popup>:
    auto_dismiss: False
    title: ""
    separator_height: 0
    size_hint: None, None
    size: 300, 200
    GridLayout:
        cols: 2
        Button:
            text: "Play"
            on_press: Factory.ThirdWindow.play += 1
            on_press: root.dismiss()
        Button:
            text: "Home"
            on_press:
                app.sm.current = "main"
                Factory.manager.transition.direction = "left"


<MainWindow>:
    name: "main"
    id: main

    GridLayout:
        cols:1
        size: root.width, root.height


        Label:
            text: "Randercise!"
            font_size: 100


        Button:
            id: EasyButton
            text: "Easy"
            variable: 5
            font_size: 50
            background_color: (0,1,0,1)
            on_release:
                app.root.current = "descriptions"
                root.manager.transition.direction = "right"
                root.level(self.text, self.variable)

        Button:
            id: MediumButton
            text: "Medium"
            variable: 7
            background_color: (1,155/255,0,1)
            font_size: 50
            on_release:
                app.root.current = "descriptions"
                root.manager.transition.direction = "right"
                root.level(self.text, self.variable)


        Button:
            id: HardButton
            text: "Hard"
            variable: 9
            background_color: (1,0,0,1)
            font_size: 50
            font_name: 'Arial'
            on_release:
                app.root.current = "descriptions"
                root.manager.transition.direction = "right"
                root.level(self.text, self.variable)




<SecondWindow>:
    name: "descriptions"

    GridLayout:
        id: grid
        cols:1

        Button:
            id: Start
            size_hint: 0.3,0.3
            text: "Start"
            font_size: 50
            background_color: (0,1,0,1)
            on_release:
                app.root.current = "timer"
                root.manager.transition.direction = "right"



<ThirdWindow>:
    name: "timer"

    GridLayout:

        cols:1

        GridLayout:

            cols:2

            GridLayout:
                cols:2

                Label:

                    text: "Set Number:"
                    font_size: 25

                Label:
                    id: set
                    text: "1"
                    font_size: 50



            Label:
                text: ""
                id: exercise

        Label:
            id: timer
            text: "3"
            font_size: 100

        Label:
            text: "Tips/Advice"

        GridLayout:
            cols: 2

            Button:
                id: pause
                text: "Pause ||"
                on_release: root.pause()
                on_press: Factory.Play().open()


            GridLayout:
                cols:2

                Label:
                    text: "Up Next: "

                Label:
                    text: ""
                    id: next




<FourthWindow>:
    name: "gif"

    GridLayout:

        cols: 1

        Label:
            text: "GIF"

<FifthWindow>:
    name: "cooldown"




#:import Factory kivy.factory.Factory
#:import Image kivy.uix.image
#:import Image kivy.core.image
#:import Video kivy.uix.video
#:import Video kivy.core.video

WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:
    FifthWindow:




<MainWindow>:
    name: "main"
    id: main

    GridLayout:
        cols:1
        size: root.width, root.height
        size_hint: (0.5, 1)
        pos_hint: {'center_x': 0.5}
        padding: 50
        spacing: 20

        Label:
            text: "Randercise!"
            font_size: 100
            color: (2/255,11/255,69/255, 0.95)

        Image:
            source: 'Images/dumbbell.jfif'


        EasyButton:
            id: EasyButton
            text: "Easy"
            variable: 5
            font_size: 50
            on_release:
                app.root.current = "descriptions"
                root.manager.transition.direction = "right"
                root.level(self.text, self.variable)

        MediumButton:
            id: MediumButton
            text: "Medium"
            variable: 7
            font_size: 50
            on_release:
                app.root.current = "descriptions"
                root.manager.transition.direction = "right"
                root.level(self.text, self.variable)

        HardButton:
            id: HardButton
            text: "Hard"
            variable: 9
            font_size: 50
            font_name: 'Arial'
            on_release:
                app.root.current = "descriptions"
                root.manager.transition.direction = "right"
                root.level(self.text, self.variable)

<EasyButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (131/255, 191/255, 250/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]

<MediumButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (8/255, 68/255, 221/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]

<HardButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (4/255, 20/255, 123/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]

<SecondWindow>:
    name: "descriptions"
    ScrollView:
        size_hint: (1, None)
        size: (root.width, root.height)
        do_scroll_y: True
        do_scroll_x: False

        GridLayout:
            spacing: 10
            size_hint_y: 1.2
            id: grid
            cols:1

            StartButton:
                size_hint: (0.1, 0.1)
                pos_hint: {'center_x': 0.5}
                id: Start
                text: "Start"
                font_size: 50
                on_release:
                    app.root.current = "timer"
                    root.manager.transition.direction = "right"

<StartButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (18/255, 143/255, 9/255, 0.95)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]


<ThirdWindow>:
    name: "timer"

    GridLayout:

        cols:1

        GridLayout:

            cols:2

            GridLayout:
                cols:2

                Label:

                    text: "Set Number:"
                    font_size: 25

                Label:
                    id: set
                    text: "1"
                    font_size: 50



            Label:
                text: ""
                id: exercise
        GridLayout:
            cols: 2
            Label:
                id: timer
                font_size: 150
            Image:
                id: advice
                source: ''


        GridLayout:
            cols: 2

            Button:
                id: pause
                text: "Pause ||"
                on_release: root.pause_play()



            GridLayout:
                cols:2

                Label:
                    text: "Up Next: "

                Label:
                    text: ""
                    id: next




<FourthWindow>:
    name: "gif"

    GridLayout:
        id: GIF
        cols: 1

        Video:
            source: 'GIFS/exercise.gif'
            state: "play"
            options: {'eos':'loop'}




<FifthWindow>:
    name: "cooldown"

    GridLayout:

        cols: 1

        Label:
            text: "Cooooooldown"



